{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Remote",
  "version": "0.2.5",
  "identifier": "com.clauderemote.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Remote",
        "width": 576,
        "height": 480,
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU2RDMxNEQ5NUMwMjE2MjgKUldRb0ZnSmMyUlRUNXJKck8yMlJPcmdFTnFrOG9nTFROV3BVczFxZUphMmY5NlVxTTdIVWpRTE0K",
      "endpoints": [
        "https://clauderemote.web.app/releases/latest.json"
      ]
    }
  }
}
