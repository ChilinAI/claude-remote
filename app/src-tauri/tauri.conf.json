{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Remote",
  "version": "0.3.4",
  "identifier": "com.clauderemote.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Remote",
        "width": 576,
        "height": 480,
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "dmg": {
        "background": "icons/dmg-background.png",
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU2RDMxNEQ5NUMwMjE2MjgKUldRb0ZnSmMyUlRUNXJKck8yMlJPcmdFTnFrOG9nTFROV3BVczFxZUphMmY5NlVxTTdIVWpRTE0K",
      "endpoints": [
        "https://clauderemote.web.app/releases/latest.json"
      ]
    }
  }
}
