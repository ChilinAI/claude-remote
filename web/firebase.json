{
  "hosting": [
    {
      "target": "clauderemote",
      "public": "public",
      "cleanUrls": true,
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "/releases/**",
          "headers": [
            { "key": "Access-Control-Allow-Origin", "value": "*" },
            { "key": "Cache-Control", "value": "no-cache" }
          ]
        }
      ]
    },
    {
      "site": "chilin1",
